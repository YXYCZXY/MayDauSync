<view class="container"><scroll-view style="{{('width:690rpx;height:'+list_height+'rpx')}}" scroll-y="{{true}}"><block wx:for="{{devicesList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="list-item" id="{{item.deviceId}}" data-event-opts="{{[['tap',[['Connect',['$event']]]]]}}" bindtap="__e"><view style="display:flex;flex-direction:column;width:80%;"><text style="font-size:medium;word-break:break-all;color:#fff;">{{"设备名称: "+item.name}}</text><text style="font-size:x-small;color:#fff;word-break:break-all;">{{"设备ID: "+item.deviceId}}</text><text style="font-size:x-small;color:#fff;word-break:break-all;">{{"信号强度RSSI: "+item.RSSI}}</text></view><image style="width:36px;height:36px;" mode="aspectFit" src="/static/images/bluetooth.png"></image></view></block></block></scroll-view><button class="button" type="primary" loading="{{searching}}" data-event-opts="{{[['tap',[['Search',['$event']]]]]}}" bindtap="__e">{{searching?'搜索中...':'搜索蓝牙设备'}}</button></view>